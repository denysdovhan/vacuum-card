{
  "name": "vacuum-card",
  "version": "2.4.1",
  "description": "Vacuum cleaner card for Home Assistant Lovelace UI",
  "main": "dist/vacuum-card.js",
  "scripts": {
    "start": "rollup -c --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "build": "rollup -c",
    "test": "npm run lint && npm run build"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards",
    "vacuum"
  ],
  "author": "Denys Dovhan <denysdovhan@gmail.com> (http://denysdovhan.com/)",
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.6.4",
    "ha-template": "^1.0.3",
    "lit": "^2.0.0",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-image": "^2.0.4",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "postcss": "^8.4.6",
    "postcss-preset-env": "^7.4.1",
    "prettier": "^2.0.5",
    "rollup": "^2.7.6",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "semantic-release": "^17.3.7"
  },
  "browserslist": [
    "last 2 versions",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,json,css,yml,md}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/vacuum-card.js",
              "label": "vacuum-card.js"
            }
          ]
        }
      ],
      "@semantic-release/git"
    ]
  }
}
